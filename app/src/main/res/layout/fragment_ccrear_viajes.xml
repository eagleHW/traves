<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reneavila.traves.CCrearViajes"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#ffe6e6e6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">


            <EditText
                android:id="@+id/cv_origen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Origen"
                android:lines="1"
                android:textSize="@dimen/letter_size"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:background="@drawable/edittext_style"/>

            <EditText
                android:id="@+id/cv_destino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Destino"
                android:lines="1"
                android:textSize="@dimen/letter_size"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:background="@drawable/edittext_style"/>

            <TextView
                android:id="@+id/fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha"
                android:lines="1"
                android:textSize="@dimen/letter_size"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:background="@drawable/edittext_style"
                android:clickable="true"
                android:onClick="showDatePickerDialog"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <TextView
                android:id="@+id/tiempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hora Salida"
                android:lines="1"
                android:textSize="@dimen/letter_size"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:background="@drawable/edittext_style"
                android:clickable="true"
                android:onClick="showTimePickerDialog"
                android:focusableInTouchMode="true"
                android:focusable="true"/>

            <Button
                android:id="@+id/crear_viaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginTop="28dp"
                android:text="Crear Viaje"
                android:textSize="@dimen/letter_size"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/is_buttonstyle"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>