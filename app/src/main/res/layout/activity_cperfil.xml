<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reneavila.traves.CPerfil"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#ffe6e6e6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Perfil Pasajero"
                android:textSize="@dimen/title_size"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/cp_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:text="Login : Login_1234"
                android:textSize="@dimen/letter_size"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/cp_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:text="Nombre : Juan Ernesto Benedicto Suarez de la Rosa"
                android:textSize="@dimen/letter_size"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/cp_edad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:text="Edad : 100"
                android:textSize="@dimen/letter_size"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/cp_genero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:text="Genero : Masculino"
                android:textSize="@dimen/letter_size"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:text="Datos Auto"
                android:textSize="@dimen/title_size"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/cp_marca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:text="Marca : Nissan"
                android:textSize="@dimen/letter_size"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/cp_modelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:text="Modelo : Sentra"
                android:textSize="@dimen/letter_size"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/cp_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:text="Color : Verde"
                android:textSize="@dimen/letter_size"
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/cp_placas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:text="Placas : 333ABC"
                android:textSize="@dimen/letter_size"
                android:textColor="#000000"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
