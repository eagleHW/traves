<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reneavila.traves.ResgistroAuto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#ffe6e6e6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="(2/2)"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Datos Automovil"
                android:textSize="@dimen/title_size"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spc_btw_elem">

                <Spinner
                    android:id="@+id/marca"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:background="@drawable/nselc_spinner_style"
                    style="?android:attr/spinnerItemStyle"/>
                <TextView
                    android:id="@+id/trian_marca"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.35"
                    android:textSize="@dimen/letter_size"
                    android:text=" ▼ "
                    android:background="@drawable/arrow_style"
                    android:onClick="openSpinner"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spc_btw_elem">

                <Spinner
                    android:id="@+id/modelo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:background="@drawable/nselc_spinner_style"
                    style="?android:attr/spinnerItemStyle"/>
                <TextView
                    android:id="@+id/trian_modelo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.35"
                    android:textSize="@dimen/letter_size"
                    android:text=" ▼ "
                    android:background="@drawable/arrow_style"
                    android:onClick="openSpinner"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spc_btw_elem">

                <Spinner
                    android:id="@+id/color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:background="@drawable/nselc_spinner_style"
                    style="?android:attr/spinnerItemStyle"/>
                <TextView
                    android:id="@+id/trian_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.35"
                    android:textSize="@dimen/letter_size"
                    android:text=" ▼ "
                    android:background="@drawable/arrow_style"
                    android:onClick="openSpinner"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
            </LinearLayout>


            <EditText
                android:id="@+id/ra_placas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Placas"
                android:lines="1"
                android:textSize="@dimen/letter_size"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:background="@drawable/edittext_style"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginTop="28dp"
                android:text="Aceptar"
                android:textSize="@dimen/letter_size"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/is_buttonstyle"
                android:onClick="irHomeConductor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/prueba"
                    android:orientation="horizontal">

                    </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
