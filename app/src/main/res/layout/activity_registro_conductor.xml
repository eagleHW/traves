<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reneavila.traves.ResgistroConductor"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#ffe6e6e6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="(1/2)"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Datos Conductor"
                android:textSize="@dimen/title_size"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/rc_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Login"
                android:lines="1"
                android:textSize="@dimen/letter_size"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:background="@drawable/edittext_style"/>

            <EditText
                android:id="@+id/rc_password"
                android:inputType="textPassword"
                android:fontFamily="arial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:lines="1"
                android:textSize="@dimen/letter_size"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:background="@drawable/edittext_style"/>

            <EditText
                android:id="@+id/rc_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:lines="1"
                android:textSize="@dimen/letter_size"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:background="@drawable/edittext_style"/>

            <EditText
                android:id="@+id/rc_edad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edad"
                android:lines="1"
                android:textSize="@dimen/letter_size"
                android:layout_marginTop="@dimen/spc_btw_elem"
                android:background="@drawable/edittext_style"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spc_btw_elem">

                <Spinner
                    android:id="@+id/rc_genero"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:background="@drawable/nselc_spinner_style"
                    style="?android:attr/spinnerItemStyle"/>
                <TextView
                    android:id="@+id/rc_arrow_genero"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.35"
                    android:textSize="@dimen/letter_size"
                    android:text=" â–¼ "
                    android:background="@drawable/arrow_style"
                    android:onClick="openSpinner"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginTop="28dp"
                android:text="Continuar"
                android:textSize="@dimen/letter_size"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/is_buttonstyle"
                android:onClick="registrarAuto"/>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
