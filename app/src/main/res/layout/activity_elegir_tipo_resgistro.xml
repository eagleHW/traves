<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reneavila.traves.elegirTipoResgistro"
    android:focusable="true" android:focusableInTouchMode="true"
    android:background="#ffe6e6e6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Registrarse"
                android:textSize="@dimen/title_size"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona tu tipo de registro"
                android:textSize="@dimen/letter_size"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Conductor"
                android:textSize="@dimen/letter_size"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:drawableLeft="@drawable/conductor"
                android:background="@drawable/etr_buttonstyle"
                android:onClick="registrarConductor"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="  Pasajero "
                android:textSize="@dimen/letter_size"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:drawableLeft="@drawable/people"
                android:background="@drawable/etr_buttonstyle"
                android:onClick="registrarPasajero"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
